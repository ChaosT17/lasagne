<!-- Team17 Ticker Tape RSS Feed Embed -->
<div style="position:relative; width:100%; font-family:'Segoe UI',sans-serif; height:40px;">
  <!-- Red Team17 box with slanted right edge, slightly larger than ticker -->
  <div style="
    background: #d32f2f;
    color: #fff;
    font-weight: bold;
    padding: 0 32px 0 16px;
    height: 44px; /* Just a bit bigger */
    display: flex;
    align-items: center;
    clip-path: polygon(0 0, 100% 0, 90% 100%, 0% 100%);
    font-size: 1.2em;
    letter-spacing: 2px;
    min-width: 110px;
    justify-content: center;
    position: absolute;
    left: 0;
    top: -2px; /* Slightly overlaps above and below */
    z-index: 2;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    ">
    Team17
  </div>
  <!-- Ticker tape -->
  <div id="ticker" style="
    background:#111;
    color:#fff;
    border:1px solid #222;
    padding:0 0 0 110px; /* Match min-width of red box */
    overflow:hidden;
    white-space:nowrap;
    width:100%;
    height:40px;
    display:flex;
    align-items:center;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
    ">
    <span id="ticker-content" style="display:inline-block;"></span>
  </div>
</div>
<script>
  // Your RSS feed URL
  var rss_url = "https://www.google.co.uk/alerts/feeds/09255055373189681314/10565810322274512878";
  var api_url = "https://api.rss2json.com/v1/api.json?rss_url=" + encodeURIComponent(rss_url);

  fetch(api_url)
    .then(response => response.json())
    .then(data => {
      var items = data.items || [];
      var ticker = document.getElementById('ticker-content');
      ticker.innerHTML = items.map(item =>
        `<a href="${item.link}" target="_blank" style="margin-right:30px; color:#fff; text-decoration:none;">${item.title}</a>`
      ).join('');
      // Animate ticker
      var tickerDiv = document.getElementById('ticker');
      var scrollAmount = 0;
      setInterval(function() {
        scrollAmount += 1;
        ticker.style.transform = `translateX(${-scrollAmount}px)`;
        if (ticker.offsetWidth - Math.abs(scrollAmount) < tickerDiv.offsetWidth) {
          scrollAmount = 0;
        }
      }, 30);
    });
</script>
